<%= simple_form_for @post, url: url_for(action: 'create', controller: 'posts', method: 'post') do |f| %>
  <%= f.input :title%>
  <%= f.input :author%>
  <%= f.input :body%>
  <p>
  <%= f.label :title%><br />
  <%= f.text_field :title%>
  </p>
  <p>
  <%= f.label :author%><br />
  <%= f.text_field :author%>
  </p>
  <p>
  <%= f.label :body%><br />
  <%= f.text_field :body%>
  </p>


<% end %>
